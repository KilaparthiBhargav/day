    /* Hidden state */
    .mega-menu {
      max-height: 0;
      overflow: hidden;
      transform: translateX(-110px);
      opacity: 0;
      transition: max-height 0.5s ease-in-out, transform 0.5s ease-in-out, opacity 0.5s ease-in-out;
    }

    /* Active state */
    .mega-menu.active {
      max-height: 500px;
      transform: translateY(0);
      opacity: 1;
    }

    .mega-column {
      padding: 10px;
    }
